@model Dealership.Models.Car

<h2>Dodaj Nowy Samochód</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <p>Proszę poprawić błędy w formularzu.</p>
    </div>
}

<form asp-controller="Admin" asp-action="AddCar" method="post" enctype="multipart/form-data" onsubmit="console.log('Form submitted!');">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Marka</label>
        <input asp-for="Make" class="form-control" required />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Model</label>
        <input asp-for="Model" class="form-control" required />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Rok</label>
        <input asp-for="Year" class="form-control" required />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Cena</label>
        <input asp-for="Price" class="form-control" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Prześlij zdjęcie</label>
        <input type="file" name="imageFile" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>

