@model List<Dealership.Models.Car>

@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Welcome to Dealership!</h1>
    <p class="lead">Browse our wide selection of cars and find your perfect match!</p>
</div>

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@car.ImageUrl" class="card-img-top" alt="@car.Make @car.Model" />
                <div class="card-body">
                    <h5 class="card-title">@car.Make @car.Model</h5>
                    <p class="card-text">Price: $@car.Price</p>
                    <a href="@Url.Action("Details", "Cars", new { id = car.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
    
</div>
