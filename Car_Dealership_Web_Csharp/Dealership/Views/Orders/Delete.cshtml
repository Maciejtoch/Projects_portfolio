@model Dealership.Models.Order

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <h4>Order Number: @Model.OrderNumber</h4>
    <p><strong>Car Model:</strong> @Model.Car</p>
    <p><strong>Customer Name:</strong> @Model.Customer</p>
    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Order")">Cancel</a>
</form>
