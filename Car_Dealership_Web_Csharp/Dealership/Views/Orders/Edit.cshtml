@model Dealership.Models.Order

<h2>Edit Order</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="CarId">Car</label>
        <select id="CarId" name="CarId" class="form-control" required>
            <option value="">Select a Car</option>
            @foreach (var car in ViewBag.Cars as List<Dealership.Models.Car>)
            {
                <!option value="@car.Id" @(car.Id == Model.CarId ? "selected" : "")>@car.Make @car.Model</!option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="CustomerName">Customer Name</label>
        <input type="text" class="form-control" id="CustomerName" name="CustomerName" value="@Model.Customer.Name" required />
    </div>

    <div class="form-group">
        <label for="OrderDate">Order Date</label>
        <input type="date" class="form-control" id="OrderDate" name="OrderDate" value="@Model.OrderDate.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <select id="Status" name="Status" class="form-control" required>
            <!option value="@(Dealership.Models.OrderStatus.Pending)" @(Model.Status == Dealership.Models.OrderStatus.Pending ? "selected" : "")>Pending</!option>
            <!option value="@(Dealership.Models.OrderStatus.Completed)" @(Model.Status == Dealership.Models.OrderStatus.Completed ? "selected" : "")>Completed</!option>
            <!option value="@(Dealership.Models.OrderStatus.Cancelled)" @(Model.Status == Dealership.Models.OrderStatus.Cancelled ? "selected" : "")>Cancelled</!option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
