@model IEnumerable<Order>

<h2>Orders</h2>

<table>
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Car Model</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td> 
                <td>@order.Car.Model</td> 
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("Details", "Order", new { id = order.Id })">Details</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<a href="@Url.Action("Create", "Order")">Create New Order</a>
