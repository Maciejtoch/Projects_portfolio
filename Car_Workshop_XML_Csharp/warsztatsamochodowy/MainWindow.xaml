<Window x:Class="warsztatsamochodowy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:warsztatsamochodowy.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,10,0">
        <Button Content="Open Car Window" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="40" Click="OpenCarWindow_Click" Margin="10,10,0,0"/>

        <Button Content="Open Mechanic Window" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="42" Margin="630,10,0,0" Click="OpenMechanicWindow_Click"/>

        <Button Content="Open Client Window" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="40" Click="OpenClientWindow_Click" Margin="475,10,0,0"/>

        <Button Content="Open Job Window" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="40" Click="OpenJobWindow_Click" Margin="320,10,0,0"/>

        <Button Content="Open Order Window" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="40" Click="OpenOrderWindow_Click" Margin="165,10,0,0"/>

        <Button Content="Order Report"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="12,357,0,0"
        Click="OpenOrderReport_Click" Height="67" Width="178" />

    </Grid>
</Window>
