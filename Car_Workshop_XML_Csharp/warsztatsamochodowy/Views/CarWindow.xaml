<Window x:Class="warsztatsamochodowy.Views.CarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:warsztatsamochodowy.Views"
        mc:Ignorable="d"
        Title="CarWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Brand:" VerticalAlignment="Top" Margin="10,10,743,0" />
        <TextBox x:Name="BrandTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="57,9,0,0" Width="300" Text="{Binding Brand}" />

        <TextBlock Text="Model:" VerticalAlignment="Top" Margin="10,49,743,0" />
        <TextBox x:Name="ModelTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="57,48,0,0" Width="300" Text="{Binding Model}" />

        <TextBlock Text="Year:" VerticalAlignment="Top" Margin="10,82,743,0" />
        <TextBox x:Name="YearTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="57,81,0,0" Width="300" Text="{Binding Year}" />

        <TextBlock Text="Registration Number:" VerticalAlignment="Top" Margin="10,113,674,0" />
        <TextBox x:Name="RegistrationNumberTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="131,113,0,0" Width="226" Text="{Binding RegistrationNumber}" />

        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Visibility="Collapsed" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,0,0" />


        <Button Content="Add Car" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,152,0,0" Command="{Binding AddCarCommand}" Width="347" />
    </Grid>
</Window>
