<Window x:Class="warsztatsamochodowy.Views.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:warsztatsamochodowy.Views"
        mc:Ignorable="d"
        Title="ClientWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="First Name:" VerticalAlignment="Top" Margin="10,11,703,0" />
        <TextBox x:Name="FirstNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,10,0,0" Width="200" Text="{Binding FirstName}" />

        <TextBlock Text="Last Name:" VerticalAlignment="Top" Margin="10,59,706,0" />
        <TextBox x:Name="LastNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,58,0,0" Width="200" Text="{Binding LastName}" />

        <TextBlock Text="Email:" VerticalAlignment="Top" Margin="10,105,703,0" />
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,104,0,0" Width="200" Text="{Binding Email}" />

        <TextBlock Text="Phone Number:" VerticalAlignment="Top" Margin="10,151,703,0" />
        <TextBox x:Name="PhoneNumberTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,150,0,0" Width="200" Text="{Binding PhoneNumber}" />
        
        <Button Content="Add Client" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,0,0" Command="{Binding AddClientCommand}" Width="300" />
    </Grid>
</Window>
