<Window x:Class="warsztatsamochodowy.Views.JobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:warsztatsamochodowy.Views"
        mc:Ignorable="d"
        Title="JobWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Job Type:" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox x:Name="Type" VerticalAlignment="Top" Margin="120,10,10,0" Text="{Binding Type}" />

        <Button Content="Add Job" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,0,10,10"
                Command="{Binding AddJobCommand}" Width="100"/>
    </Grid>
</Window>
