<Window x:Class="warsztatsamochodowy.Views.MechanicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:warsztatsamochodowy.Views"
        mc:Ignorable="d"
        Title="MechanicWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="First Name:" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox x:Name="FirstName" VerticalAlignment="Top" Margin="120,10,10,0" Text="{Binding FirstName}" />

        <TextBlock Text="Last Name:" VerticalAlignment="Top" Margin="10,40,0,0" />
        <TextBox x:Name="LastName" VerticalAlignment="Top" Margin="120,40,10,0" Text="{Binding LastName}" />

        <TextBlock Text="Specialization:" VerticalAlignment="Top" Margin="10,70,0,0" />
        <TextBox x:Name="Specialization" VerticalAlignment="Top" Margin="120,70,10,0" Text="{Binding Specialization}" />

        <Button Content="Add Mechanic" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,0,10,10"
                Command="{Binding AddMechanicCommand}" Width="100"/>
    </Grid>
</Window>
